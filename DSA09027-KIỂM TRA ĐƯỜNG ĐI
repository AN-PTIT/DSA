#include<bits/stdc++.h>
using namespace std;
int n,m,q,x,y;
vector<int>adj[1001];
bool visited[1001];
void dfs(int u){
	visited[u]=true;
	for(int x:adj[u]){
		if(!visited[x]) dfs(x);
	}
}
void demsolt(){
	int ans=0;
	memset(visited,false,sizeof(visited));
	dfs(x);
	if(visited[y]) cout<<"YES"<<endl;
	else cout<<"NO"<<endl;
}
int main(){
	int t;cin>>t;
	while(t--){
		cin>>n>>m;
		for(int i=1;i<=n;i++){
			adj[i].clear();
		}
		for(int i=0;i<m;i++){
			int x,y;cin>>x>>y;
			adj[x].push_back(y);
			adj[y].push_back(x);
		}
		cin>>q;
		while(q--){
			cin>>x>>y;
			demsolt();
		}
	}
} 
